<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicThreeStudyMat">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#D7C3C3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Introduction"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_middle_button"
                android:text="INTRODUCTION"
                android:onClick="Introduction"
                />

            <Button
                android:id="@+id/RETOFA"
                android:text="RE TO FA"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_middle_button"
                android:layout_marginBottom="5dp"
                android:onClick="RE_TO_FA"
                />

            <Button
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_middle_button"
                android:layout_marginBottom="5dp"
                android:text="FA TO RE"
                android:onClick="FA_TO_RE"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_middle_button"
                android:layout_marginBottom="5dp"
                android:text="Properties and applications"
                android:onClick="Properties_and_applications"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>